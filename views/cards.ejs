<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Cards</title>

    <!-- Styles -->
    <link rel="stylesheet" href="/css/cards.css" />
  </head>
  <body>
    <%- include('partials/toast') %>

    <div class="content">
      <div class="grid two">
        <!-- Card Preview -->
        <div class="card" id="cardPreview">
          <div class="card__head">
            <h2>My Cards</h2>
          </div>
          <div class="card-visual visa">
            <img src="/image/chip-one.png" alt="Chip" class="card-chip" />
            <div class="row">
              <span id="previewType">Debit</span>
              <img
                id="previewLogo"
                src="/image/visa-logo.png"
                alt="Visa"
                class="card-logo"
              />
            </div>
            <!-- cards -->
            <div class="digits" id="previewNumber">
              <%= card ? card.number : "**** **** **** ****" %>
            </div>
            <div class="row">
              <span>CVV: <%= card ? card.cvv : "xxx" %></span>
              <span>Expiry: <%= card ? card.expiry : "xx/xx" %></span>
            </div>
            <!-- cards -->
            <div class="row name">
              <strong
                ><%= user ? user.firstName + " " + user.lastName : "Full Name"
                %></strong
              >
            </div>
          </div>
        </div>

        <!-- Apply for Card -->
        <div class="card action">
          <h3>Apply for New Card</h3>
          <form id="cardForm">
            <label>
              Card Network
              <select name="network" id="networkSelect" required>
                <option value="Visa">Visa</option>
                <option value="MasterCard">Master Card</option>
                <option value="Verve">Verve</option>
              </select>
            </label>
            <label>
              Card Type
              <select name="type" id="typeSelect" required>
                <option value="Debit">Debit</option>
                <option value="Credit">Credit</option>
                <option value="Prepaid">Prepaid</option>
              </select>
            </label>
            <button type="submit" class="cardsbtn">Apply for card</button>
          </form>
        </div>
      </div>
    </div>

    <script src="/js/cards.js"></script>
  </body>
</html>
