<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/transfer-history.css" />
    <title>Transfer History</title>
  </head>
  <body>
    <section class="transfer-section transfer-history">
      <h2 class="transfer-title">Transfer History</h2>

      <div class="table-wrap">
        <% if (transactions && transactions.length > 0) { %>
        <table class="table">
          <thead>
            <tr>
              <th>Date</th>
              <th>Type</th>
              <th>Amount</th>
              <th>Status</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
            <% transactions.forEach(tx => { %>
            <tr>
              <!-- Date -->
              <td><%= new Date(tx.date).toLocaleString() %></td>

              <!-- Type -->
              <td><%= tx.type %></td>

              <!-- Amount (always normalized to tx.amount in controller) -->
              <td>
                <% if (tx.type === "Debit") { %>
                  -$<%= tx.amount.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
                <% } else { %>
                  +$<%= tx.amount.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
                <% } %>
              </td>

              <!-- Status -->
              <td>
                <% if (tx.status === "Completed") { %>
                  <span class="status completed"><%= tx.status %></span>
                <% } else if (tx.status === "Pending") { %>
                  <span class="status pending"><%= tx.status %></span>
                <% } else { %>
                  <span class="status failed"><%= tx.status %></span>
                <% } %>
              </td>

              <!-- Description -->
              <td><%= tx.description || "-" %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } else { %>
        <p class="no-data">No transactions found.</p>
        <% } %>
      </div>
    </section>
  </body>
</html>
